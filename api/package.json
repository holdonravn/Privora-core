// api/package.json (archiver + script)
{
  "name": "privora-api",
  "version": "0.1.1",
  "type": "module",
  "main": "dist/api/src/server.js",
  "scripts": {
    "dev": "tsx watch api/src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/api/src/server.js",
    "cron:root": "node dist/api/src/cron/daily-root.js",
    "root:now": "node -e \"import('./dist/api/src/cron/daily-root.js').then(m=>m.runDailyRootNow())\"",
    "audit:pack": "node -e \"import('./dist/scripts/proof-pack.js').then(m=>m.main(process.argv[1],process.argv[2]))\" --"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "prom-client": "^15.1.0",
    "redis": "^4.6.12"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.7",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "engines": { "node": ">=20.0.0" }
}
