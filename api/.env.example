# api/.env.example  (g√ºncel)
# General
PORT=4000
NODE_ENV=development
DATA_DIR=./api/.data

# Auth (HMAC)
API_KEY=dev-key-please-change
API_SHARED_SECRET=dev-shared-secret
HMAC_WINDOW_SEC=300
HMAC_MAX_SKEW_SEC=10

# Rate limit / Redis
REDIS_URL=redis://127.0.0.1:6379
# Scale profile defaults (k6 ile oynayabilirsiniz)
RL_BUCKET=80
RL_REFILL=5

# JSON / CORS
JSON_LIMIT=256kb
JSON_MAX_DEPTH=100
ALLOWED_ORIGINS=*

# Merkle & Cron
MERKLE_LEAF_HASH=sha256
ROOT_SCHEDULE=5 0 * * *
TZ=UTC
ROOT_RETRY=2

# Alerts (optional)
ALERT_WEBHOOK_URL=

# Anchors (flags)
ENABLE_EAS=true
ENABLE_OTS=false

# Batching policy (scaffold)
BATCH_POLICY=static  # static | dynamic

# Badge / verify cache headers
BADGE_CACHE_TTL_SEC=60
BADGE_SWR_SEC=300
