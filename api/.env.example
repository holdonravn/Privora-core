# =============================================================================
# Privora â€” .env.example
# =============================================================================

# Server
PORT=4000
NODE_ENV=development
ALLOWED_ORIGINS=*

# Data & Storage
DATA_DIR=./api/.data
FHE_LOG_FILE=fhe-events.ndjson

# Auth (HMAC)
API_SHARED_SECRET=__SET__
HMAC_KEYS=default=__SET__
HMAC_WINDOW_SEC=300
HMAC_MAX_SKEW_SEC=10
NONCE_TTL_SEC=600

# Rate Limit
RL_BUCKET=80
RL_REFILL=5

# Badge Cache
BADGE_CACHE_TTL_SEC=60
BADGE_SWR_SEC=300

# Flags
BATCH_POLICY=static
ENABLE_EAS=true
ENABLE_OTS=false

# Merkle / Cron
MERKLE_LEAF_HASH=sha256
ROOT_SCHEDULE=5 0 * * *
ROOT_RETRY=2

# Metrics
METRICS_ALLOWLIST=
METRICS_BASIC_AUTH=
LOG_LEVEL=info

# Blockchain
CHAIN_DEFAULT=cypher
FHE_STORAGE_CONTRACT=0xfhe1234567890123456789012345678901234567
CYPHER_FHE_CONTRACT=0xfhe2345678901234567890123456789012345678
ETH_FHE_CONTRACT=0xfhe3456789012345678901234567890123456789
ARB_FHE_CONTRACT=0xfhe4567890123456789012345678901234567890

# Database / KMS (placeholder)
DATABASE_URL=postgres://user:pass@localhost:5432/privora
KMS_ENDPOINT=__SET__
KMS_KEY_ID=__SET__

# FHE / WASM
TFHE_WASM_PATH=/wasm/tfhe_wasm_bg.wasm
TFHE_THREAD_COUNT=4
