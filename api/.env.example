# api/.env.example 
# General
PORT=4000
NODE_ENV=development
DATA_DIR=./api/.data

# Auth (HMAC) — rotasyonlu
API_KEY=dev-key-please-change
# Tek anahtar legacy (opsiyonel):
# API_SHARED_SECRET=dev-shared-secret
# Tercih edilen: çoklu anahtar JSON
HMAC_KEYS=[{"id":"v1","key":"dev-shared-secret"}]
# İstemci `x-key-id: v1` gönderebilir (göndermezse en son anahtar kullanılır)
API_KEY_ID=v1

# Rate limit / Redis
REDIS_URL=redis://127.0.0.1:6379
RL_BUCKET=30
RL_REFILL=0.5

# JSON / CORS
JSON_LIMIT=256kb
JSON_MAX_DEPTH=100
ALLOWED_ORIGINS=*

# Merkle & Cron
MERKLE_LEAF_HASH=sha256
ROOT_SCHEDULE=5 0 * * *
TZ=UTC
ROOT_RETRY=2

# Alerts (optional)
ALERT_WEBHOOK_URL=
